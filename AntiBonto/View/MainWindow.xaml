<Window x:Class="AntiBonto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:AntiBonto.View"
        xmlns:vm="clr-namespace:AntiBonto.ViewModel"
        xmlns:hammer="clr-namespace:Hammer.SpinningWheel;assembly=Hammer.SpinningWheel"
        xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
        mc:Ignorable="d"
        Title="AntiBontó" Width="1024" Height="768">
    <Window.DataContext>
        <vm:MainWindow/>
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <FrameworkElement x:Key="DataContextProxy" DataContext="{Binding}"/> <!-- hack, see http://stackoverflow.com/questions/7660967-->
        <Storyboard x:Key="ButtonRotateAnimation">
            <DoubleAnimation Storyboard.TargetName="AddOrRemovePersonButton" 
                             Storyboard.TargetProperty="(Button.RenderTransform).(RotateTransform.Angle)"
                             To="45" Duration="0:0:.2"/>
        </Storyboard>
        <Storyboard x:Key="ButtonRotateBackAnimation" x:Name="ButtonRotateBackAnimation"> <!-- Called from code because it turned out to be the only reliable option -->
            <DoubleAnimation Storyboard.TargetName="AddOrRemovePersonButton" 
                             Storyboard.TargetProperty="(Button.RenderTransform).(RotateTransform.Angle)"
                             To="0" Duration="0:0:.2"/>
        </Storyboard>
    </Window.Resources>
    <TabControl SelectionChanged="TabControl_SelectionChanged">
        <TabItem Header="1. Résztvevők" Name="Resztvevok">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                    <Label DockPanel.Dock="Left" Content="Vedd fel a résztvevőket!"/>
                    <Button Content="Excel fájl betöltése" Click="LoadXLS" Padding="5" DockPanel.Dock="Left"/>
                    <hammer:SpinningWheel Radius="9" CircleRadius="2.5" Visibility="Hidden" Name="XLSLoadingAnimation" DockPanel.Dock="Left" Margin="20,0,0,0"/>
                    <Button Content="Törlés" DockPanel.Dock="Right" Click="Reset" Padding="5"/>
                </DockPanel>
                <Label Target="{Binding ElementName=PeopleView}" Content="Résztvevők" DockPanel.Dock="Top"/>
                <Grid Margin="5">
                    <view:DnDItemsControl x:Name="PeopleView" ItemsSource="{Binding People}" dd:DragDrop.DropHandler="{Binding}">
                        <ItemsControl.Triggers>
                            <EventTrigger RoutedEvent="DragDrop.DragEnter">
                                <BeginStoryboard Storyboard="{StaticResource ButtonRotateAnimation}"/>
                            </EventTrigger>
                        </ItemsControl.Triggers>
                    </view:DnDItemsControl>
                    <view:MaterialButton Click="AddPerson" x:Name="AddOrRemovePersonButton"
                                         DockPanel.Dock="Right" Margin="10"
                                         HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                         dd:DragDrop.DropHandler="{Binding}" dd:DragDrop.IsDropTarget="True"
                                         RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <RotateTransform/>
                        </Button.RenderTransform>
                    </view:MaterialButton>
                </Grid>
            </DockPanel>
        </TabItem>
        <TabItem Header="2. Szerepek" IsEnabled="{Binding PeopleNotEmpty}" Name="Szerepek">
            <DockPanel>
                <Label DockPanel.Dock="Top" Content="Csoportosítsd a résztvevőket!"/>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="2" Grid.Column="0" Content="Kiscsoportvezetők (max. 12)"/>
                    <Label                              Content="Lány vezető"/>
                    <Label Grid.Column="1"              Content="Fiú vezető"/>
                    <Label Grid.Column="3" Grid.Row="2" Content="Zeneteamvezető"/>
                    <Label Grid.Row="4" Grid.Column="0" Content="Újoncok"/>
                    <Label Grid.Row="4" Grid.Column="1" Content="Team"/>
                    <Label Grid.Row="4" Grid.Column="2" Content="Egyéb résztvevők"/>
                    <Label Grid.Row="4" Grid.Column="3" Content="Zeneteam"/>
                    <view:DnDItemsControl Grid.Row="3" Grid.Column="0" ItemsSource="{Binding Kiscsoportvezetok}" dd:DragDrop.DropHandler="{Binding}" x:Name="Kiscsoportvezetok" Grid.ColumnSpan="3"/>
                    <view:DnDItemsControl Grid.Row="5" Grid.Column="0" ItemsSource="{Binding Ujoncok}"           dd:DragDrop.DropHandler="{Binding}" x:Name="Ujoncok"/>
                    <view:DnDItemsControl Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Team}"              dd:DragDrop.DropHandler="{Binding}" x:Name="Team"/>
                    <view:DnDItemsControl Grid.Row="5" Grid.Column="3" ItemsSource="{Binding Zeneteam}"          dd:DragDrop.DropHandler="{Binding}" x:Name="Zeneteam"/>
                    <view:DnDItemsControl Grid.Row="5" Grid.Column="2" ItemsSource="{Binding Egyeb}"             dd:DragDrop.DropHandler="{Binding}" x:Name="Egyeb"/>
                    <Label Grid.Row="1" Content="{Binding Lanyvezeto}" x:Name="Lanyvezeto" Padding="3" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                           dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding}" dd:DragDrop.DragAdornerTemplate="{StaticResource adorner}"/>
                    <Label Grid.Row="1" Grid.Column="1" Content="{Binding Fiuvezeto}" x:Name="Fiuvezeto" Padding="3" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                           dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding}" dd:DragDrop.DragAdornerTemplate="{StaticResource adorner}"/>
                    <Label Grid.Row="3" Grid.Column="3" Content="{Binding Zeneteamvezeto}" x:Name="Zeneteamvezeto" Padding="3" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                           dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding}" dd:DragDrop.DragAdornerTemplate="{StaticResource adorner}"/>

                </Grid>
            </DockPanel>
        </TabItem>
        <TabItem Header="3. Életkor" IsEnabled="{Binding PeopleNotEmpty}" Name="Eletkorok">
            <DockPanel>
                <Label DockPanel.Dock="Top" Content="Add meg az életkorokat! (nem kötelező)"/>
                <DataGrid ItemsSource="{Binding KiscsoportbaOsztando}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Név" IsReadOnly="True"/>
                        <DataGridTextColumn Binding="{Binding BirthYear}" Header="Születési év"/>
                        <DataGridTextColumn Binding="{Binding Age}" Header="Kor"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </TabItem>
        <TabItem Visibility="Collapsed" Header="4. Lányok-fiúk" IsEnabled="{Binding PeopleNotEmpty}" Name="LanyokFiuk">
            <DockPanel>
                <Label DockPanel.Dock="Top" Content="Válogasd szét a lányokat és a fiúkat!"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Lányok"/>
                    <Label Grid.Column="2" Grid.Row="0" Content="Fiúk"/>
                    <view:DnDItemsControl Grid.Column="0" Grid.Row="1" ItemsSource="{Binding Lanyok}"
                                          dd:DragDrop.DropHandler="{Binding}" x:Name="Lanyok"/>
                    <view:DnDItemsControl Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Nullnemuek}"
                                          dd:DragDrop.DropHandler="{Binding}" x:Name="Nullnemuek"/>
                    <view:DnDItemsControl Grid.Column="2" Grid.Row="1" ItemsSource="{Binding Fiuk}"
                                          dd:DragDrop.DropHandler="{Binding}" x:Name="Fiuk"/>
                </Grid>
            </DockPanel>
        </TabItem>
        <TabItem Header="4. Újoncok"  IsEnabled="{Binding PeopleNotEmpty}" Name="UjoncokTab">
            <DockPanel>
                <Label DockPanel.Dock="Top" Content="Kinek az újonca?"/>
                <ContentControl Visibility="Collapsed" Content="{StaticResource DataContextProxy}"/>
                <!-- hack part 2 -->
                <DataGrid ItemsSource="{Binding Ujoncok}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Name}" Header="Név" IsReadOnly="True"/>
                        <DataGridComboBoxColumn Header="Kinek az újonca" 
                                                ItemsSource="{Binding DataContext.Team, Source={StaticResource DataContextProxy}}" 
                                                SelectedItemBinding="{Binding KinekAzUjonca}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </TabItem>
        <TabItem Header="5. Megszorítások" IsEnabled="{Binding PeopleNotEmpty}" Name="Megszoritasok">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                    <Label DockPanel.Dock="Left" Content="Megkötések a kiscsoportbeosztáshoz"/>
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <Label Content="Legnagyobb megengedett korkülönbség"/>
                        <TextBox MinWidth="20">
                            <TextBox.Text>
                                <Binding Path="MaxAgeDifference">
                                    <Binding.ValidationRules>
                                        <view:IntValidator/>
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                    <ComboBox ItemsSource="{Binding KiscsoportbaOsztando}" IsEditable="False" SelectedValue="{Binding Edge.Persons[0]}" MinWidth="100" IsSynchronizedWithCurrentItem="False"/>
                    <Label Content=" és "/>
                    <ComboBox ItemsSource="{Binding KiscsoportbaOsztando}" IsEditable="False" SelectedValue="{Binding Edge.Persons[1]}" MinWidth="100" IsSynchronizedWithCurrentItem="False"/>
                    <ComboBox IsEditable="False" SelectedValue="{Binding Edge.Dislike}" SelectedValuePath="Tag" MinWidth="100" Margin="5,0,0,0">
                        <ComboBox.Items>
                            <ComboBoxItem Content="együtt kell legyenek" Tag="False"/>
                            <ComboBoxItem Content="nem lehetnek együtt" Tag="True"/>
                        </ComboBox.Items>
                    </ComboBox>
                    <Label Content=", mert "/>
                    <TextBox Text="{Binding Edge.Reason}" MinWidth="100"/>
                    <view:MaterialButton Click="AddEdge" Height="20" Margin="10,0,0,0">
                        <Button.Content>
                            <TextBlock Text="+" Margin="0,-11,0,0"/>
                        </Button.Content>
                    </view:MaterialButton>
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Edges}" Margin="5">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" ToolTip="{Binding Reason}">
                                <Label Content="{Binding Persons[0]}" Margin="5,5,0,5" Padding="3" MinWidth="100" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                <Grid>
                                    <Line Stroke="Black" X2="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Label Foreground="Red" Content="X" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-1,0,0"
                                           Visibility="{Binding Dislike, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </Grid>
                                <Label Content="{Binding Persons[1]}" Margin="0,5,5,5" Padding="3" MinWidth="100" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
                                <view:MaterialButton Click="RemoveEdge" Height="20" Margin="10,0,0,0">
                                    <Button.Content>
                                        <TextBlock Text="×" Margin="0,-4,0,0" FontSize="14" FontWeight="Bold"/>
                                    </Button.Content>
                                </view:MaterialButton>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <Border BorderThickness="1" CornerRadius="3" BorderBrush="Gray" Padding="5">
                                <ItemsPresenter/>
                            </Border>
                        </ControlTemplate>
                    </ItemsControl.Template>
                </ItemsControl>
            </DockPanel>
        </TabItem>
        <TabItem Header="6. 20HV extrák" IsEnabled="{Binding PeopleNotEmpty}" Name="HV20Tab">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label Content="Zugliget"/>
                <Label Content="Szentendre" Grid.Column="1"/>
                <view:DnDItemsControl Grid.Row="1" ItemsSource="{Binding MutuallyExclusiveGroups[0]}" x:Name="Zugliget"
                                      dd:DragDrop.DropHandler="{Binding}" ColorByType="True"/>
                <view:DnDItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Szentendre}" x:Name="Szentendre"
                                      dd:DragDrop.DropHandler="{Binding}" ColorByType="True"/>
                <view:DnDItemsControl Grid.Row="2" Grid.ColumnSpan="2" ItemsSource="{Binding KiscsoportbaOsztando}" x:Name="HV20All"
                                      dd:DragDrop.DropHandler="{Binding}" ColorByType="True"/>
            </Grid>
        </TabItem>
        <TabItem Header="7. Kiscsoportbeosztás" Name="Kiscsoportbeoszto">
            <DockPanel>
                <DockPanel DockPanel.Dock="Top" LastChildFill="False" Width="Auto">
                    <Button Content="Magic" Padding="5" Click="Magic" DockPanel.Dock="Left"/>
                    <hammer:SpinningWheel Radius="9" CircleRadius="2.5" Visibility="Hidden" Name="MagicAnimation" Margin="20,0,0,0" DockPanel.Dock="Left"/>
                    <hammer:SpinningWheel Radius="9" CircleRadius="2.5" Visibility="Hidden" Name="XLSSavingAnimation" Margin="20,0,20,0" DockPanel.Dock="Right"/>
                    <Button Content="Mentés" Padding="5" Margin="5,0,0,0" Click="SaveXLS" DockPanel.Dock="Right" IsEnabled="{Binding BeosztasKesz}"/>
                    <Button Content="Törlés" Padding="5" Click="ClearGroups" DockPanel.Dock="Right"/>                    
                </DockPanel>
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBarItem Content="{Binding Status}" MinHeight="22"/>
                </StatusBar>
                <Grid Name="Kiscsoportok">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.Resources>
                        <ResourceDictionary>
                            <view:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter"/>
                            <Style TargetType="view:DnDItemsControl">
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="dd:DragDrop.DropHandler" Value="{Binding}"/>
                                <Setter Property="ColorByType" Value="True"/>
                            </Style>
                        </ResourceDictionary>
                    </Grid.Resources>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Kiscsoportok[0]}" x:Name="kcs1"/>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Kiscsoportok[1]}" x:Name="kcs2"/>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="2" ItemsSource="{Binding Kiscsoportok[2]}" x:Name="kcs3"/>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="3" ItemsSource="{Binding Kiscsoportok[3]}" x:Name="kcs4"/>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="4" ItemsSource="{Binding Kiscsoportok[4]}" x:Name="kcs5"/>
                    <view:DnDItemsControl Grid.Row="0" Grid.Column="5" ItemsSource="{Binding Kiscsoportok[5]}" x:Name="kcs6"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="0" ItemsSource="{Binding Kiscsoportok[6]}" x:Name="kcs7"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Kiscsoportok[7]}" x:Name="kcs8"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="2" ItemsSource="{Binding Kiscsoportok[8]}" x:Name="kcs9"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="3" ItemsSource="{Binding Kiscsoportok[9]}" x:Name="kcs10"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="4" ItemsSource="{Binding Kiscsoportok[10]}" x:Name="kcs11"/>
                    <view:DnDItemsControl Grid.Row="1" Grid.Column="5" ItemsSource="{Binding Kiscsoportok[11]}" x:Name="kcs12"/>
                    <Label Grid.Row="2" Content="Nincsenek beosztva"/>
                    <view:DnDItemsControl Grid.Row="3" Grid.ColumnSpan="6" ItemsSource="{Binding NoKiscsoport}" x:Name="nokcs"/>
                </Grid>
            </DockPanel>
        </TabItem>
    </TabControl>
</Window>